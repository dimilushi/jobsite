<p id="notice"><%= notice %></p>

<h1>Listing Vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Salary</th>
      <th>Salary type</th>
      <th>Schedule</th>
      <th>Photo</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Category</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.title %></td>
        <td><%= vacancy.text %></td>
        <td><%= vacancy.salary %></td>
        <td><%= vacancy.salary_type %></td>
        <td><%= vacancy.schedule %></td>
        <td><%= vacancy.photo %></td>
        <td><%= vacancy.city %></td>
        <td><%= vacancy.postcode %></td>
        <td><%= vacancy.category %></td>
        <td><%= vacancy.status %></td>
        <td><%= link_to 'Show', vacancy %></td>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

