<p id="notice"><%= notice %></p>

<h1>Listing Employers</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Personal name</th>
      <th>Address</th>
      <th>Postcode</th>
      <th>City</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Email</th>
      <th>Logo</th>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.business_name %></td>
        <td><%= employer.personal_name %></td>
        <td><%= employer.address %></td>
        <td><%= employer.postcode %></td>
        <td><%= employer.city %></td>
        <td><%= employer.phone %></td>
        <td><%= employer.website %></td>
        <td><%= employer.email %></td>
        <td><%= employer.logo %></td>
        <td><%= employer.text %></td>
        <td><%= employer.status %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

